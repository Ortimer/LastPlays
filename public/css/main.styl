body
	background-image url('../img/Background.jpg')
	color #CCCCCC
	
	.selectRow
		background url("../img/select_arrow.png") no-repeat scroll right center #FFFFFF
		border 1px solid #CCCCCC
		border-radius 2em
		box-shadow inset 2px 2px 2px 0px #dddddd
		-moz-box-shadow inset 2px 2px 2px 0px #dddddd
		-webkit-box-shadow inset 2px 2px 2px 0px #dddddd
		height 30px
		margin 0em 0em 1em
		overflow hidden
		padding 0em 0.45em 0em

		select
			background none repeat scroll 0% 0% transparent
			border 0
			font-family 'Della Respira', serif
			padding 0
			background-clip 25em 0px
			width 115%

	header
		#appHeader
			background #3344EE
			border-bottom 3px solid #BF1D2C
			font-family 'Architects Daughter', cursive
			text-align center
			margin 0
			padding 0.3em

			img
				width 100%

			h1
				font-size 20px
				font-weight bold
				margin 0
				padding 0	

			#logo, #titulo_nav 
				display inline-block
				vertical-align top

			#logo
				height 40px
				width 40px

			#titulo_nav
				margin 0.5em

		.filterFormHidden
			display none

		.filterFormShow
			background-color #BF1D2C
			padding-top 0.3em
			text-align center

			.selectRow
				margin 0.3em auto
				width 80%

			button
				background-color #3344EE
				background-image -webkit-linear-gradient(top,#3344EE,#00008B)
				background-image -moz-linear-gradient(top,#3344EE,#00008B)
				background-image -ms-linear-gradient(top,#3344EE,#00008B)
				background-image -o-linear-gradient(top,#3344EE,#00008B)
				background-image linear-gradient(top,#3344EE,#00008B)
				border 1px solid #dcdcdc
				border-radius 13px
				-moz-border-radius 13px
				-webkit-border-radius 13px
				box-shadow 0 1px 2px #000000
				-moz-box-shadow 0 1px 2px #000000
				-webkit-box-shadow 0 1px 2px #000000
				color #EEEEEE
				font-family 'Della Respira', serif
				font-weight bold
				height 30px
				margin 0.3em 0em 0.6em 0em
				text-shadow 0 0.07em 0.14em #000000
				width 80%

			button:hover
				background-color #00008B
				background-image -webkit-linear-gradient(top,#00008B,#3344EE)
				background-image -moz-linear-gradient(top,#00008B,#3344EE)
				background-image -ms-linear-gradient(top,#00008B,#3344EE)
				background-image -o-linear-gradient(top,#00008B,#3344EE)
				background-image linear-gradient(top,#00008B,#3344EE)
		
		#filterToggle
			background-color #BF1D2C
			border-radius 0em 0em 0.2em 0.2em
			float right
			clear right
			padding 0.1em 0.2em
			margin-right 0.2em

		#filterToggle:hover
			cursor pointer

	section

		#inputForm
			background-color: #3344EE
			border-radius 1em 1em 1em 1em
			box-shadow 0.5em 0.5em 0.5em rgba(0, 0, 0, 0.4)
			font-family 'Della Respira', serif
			font-size 13px
			margin 1em auto
			padding 20px 40px
			width 200px

			.inputRow, .selectRow, button
				box-sizing border-box
				-ms-box-sizing border-box
				-moz-box-sizing border-box
				-webkit-box-sizing border-box
				display block
				width 100%

			.inputRow
				height 30px
				margin 0em 0em 1em

			#bggUser
				border 1px solid #CCCCCC
				border-radius 2em
				font-family 'Della Respira', serif
				padding 0em 0.5em 0em

			.badInput
				background-color #EEA9A9

			button
				background-color #BF1D2C
				background-image -webkit-linear-gradient(top,#BF1D2C,#8B0000)
				background-image -moz-linear-gradient(top,#BF1D2C,#8B0000)
				background-image -ms-linear-gradient(top,#BF1D2C,#8B0000)
				background-image -o-linear-gradient(top,#BF1D2C,#8B0000)
				background-image linear-gradient(top,#BF1D2C,#8B0000)
				border 1px solid #dcdcdc
				border-radius 13px
				-moz-border-radius 13px
				-webkit-border-radius 13px
				box-shadow 0 1px 2px #000000
				-moz-box-shadow 0 1px 2px #000000
				-webkit-box-shadow 0 1px 2px #000000
				color #EEEEEE
				font-family 'Della Respira', serif
				font-weight bold
				height 36px
				margin 0px
				text-shadow 0 0.07em 0.14em #000000

			button:hover
				background-color #8B0000
				background-image -webkit-linear-gradient(top,#8B0000,#BF1D2C)
				background-image -moz-linear-gradient(top,#8B0000,#BF1D2C)
				background-image -ms-linear-gradient(top,#8B0000,#BF1D2C)
				background-image -o-linear-gradient(top,#8B0000,#BF1D2C)
				background-image linear-gradient(top,#8B0000,#BF1D2C)
		
		#loadingIcon
			text-align center
			width 100%

			img
				height auto
				width 75%
				max-width 350px

		.gameItem
			background-image linear-gradient(102deg,#3344EE,#222233)
			background-image -moz-linear-gradient(102deg,#3344EE,#222233)
			background-image -ms-linear-gradient(102deg,#3344EE,#222233)
			background-image -o-linear-gradient(102deg,#3344EE,#222233)
			background-image -webkit-linear-gradient(102deg,#3344EE,#222233)
			border-radius 1em 1em 1em 1em
			box-shadow 0.5em 0.5em 0.5em rgba(0, 0, 0, 0.4)
			font-family 'Della Respira', serif
			font-size 13px
			margin 1em
			padding 1em
			transition height 1s

			figure
				text-align center
				width 100%
	
				.gameImg
					box-shadow 0.5em 0.5em 0.5em rgba(0, 0, 0, 0.4)
					height auto
					max-height 85px
					width auto

			.gameTitle
				margin 0
				overflow hidden
				padding 0
				text-align center
				vertical-align top

			.gameLastDate, .gameTimeLast, .gameTotalPlays, .bggLink
				margin 0.3em 0

			.gameLastDate, .gameTotalPlays, .bggLink
				display none

			a:link
				color #8888FF

			a:visited
				color #FF8888

		.extendedGameItem
			@extend body section .gameItem

			.gameLastDate, .gameTotalPlays, .bggLink
				display block

@import "responsive.styl"