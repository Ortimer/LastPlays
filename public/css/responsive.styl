@media screen and (min-width:500px)
	body
		section
			#inputForm
				font-size 16px
				margin 2em auto
				width 315px

			.gameItem, .extendedGameItem
				font-size 12px

				figure
					float left
					padding-right 1em
					width 120px
		
					.gameImg
						max-height 75px
						max-width 120px

				.gameTitle
					text-align left

				.gameLastDate, .gameTotalPlays, .bggLink
					display block

				.gameTotalPlays, .bggLink
					border-radius 0.5em 0.5em 0.5em 0.5em
					box-shadow 0.2em 0.2em 0.2em rgba(0, 0, 0, 0.4)
					float right
					margin-right 1em
					padding 0.25em

				.gameTotalPlays
					background #333333
					margin-top -3.8em
					position relative

				.gameTotalPlays:hover
					background #030303
					margin-top -3.8em
					position relative

				.bggLink
					background #BF1D2C
					clear right
					margin-top -1.5em
					position relative

				.bggLink:hover
					background #7F0000

				a:link
					color #CCCCCC

				a:visited
					color #CCCCCC

@media screen and (min-width:768px)
	body
		header
			.filterFormShow
				.selectRow, button
					display inline-block

				.selectRow
					margin 0.3em
					width 35%

				button
					float right
					margin-right 0.6em
					width 20%

		section
			.gameItem, .extendedGameItem
				font-size 15px

				figure
					padding-right 2em
					width 170px
		
					.gameImg
						max-height 95px
						max-width 170px