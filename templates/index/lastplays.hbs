<div class="container list-article">
  <div class="btn-group pull-right" id="switch-view">
    <button class="btn btn-primary">
      <i class="fa fa-th-large"></i>
    </button>
    <button class="btn btn-primary active">
      <i class="fa fa-list"></i>
    </button>
  </div>
  <div class="clearfix"></div>
  <div class="row">
    {{#each gameEntry in collection}}
      <div class="col-xs-12 article-wrapper">
        <article>
          <a href="{{gameEntry.bggUrl}}" class="gotoBgg">Go to BGG</a>
          <div class="img-external-wrapper">
            <div class="img-wrapper">
              <img src="{{gameEntry.image}}" alt="{{gameEntry.name}}" />
            </div>
          </div>
          <h1>{{gameEntry.name}}</h1>
          <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Amet ducimus totam quasi nam porro sed.</p>
        </article>
      </div>
    {{/each}}
  </div>
</div>
