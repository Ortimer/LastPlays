<div class="container-fluid list-article">
  <div class="btn-group pull-right hidden-xs hidden-sm" id="switch-view">
    <button class="btn btn-primary">
      <i class="fa fa-th-large"></i>
    </button>
    <button class="btn btn-primary active">
      <i class="fa fa-list"></i>
    </button>
  </div>
  <div class="clearfix"></div>
  <div class="row">
    {{#each gameEntry in model.games}}
      <div class="article-wrapper col-xs-12">
        <article>
          <a href="{{gameEntry.bggUrl}}" class="gotoBgg">Go to BGG</a>
          <table class="img-wrapper">
            <tr>
              <td>
                <img src="{{gameEntry.image}}" alt="{{gameEntry.name}}" />
              </td>
            </tr>
          </table>
          <h1>{{gameEntry.name}}</h1>
          <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Amet ducimus totam quasi nam porro sed.</p>
        </article>
      </div>
    {{/each}}
  </div>
</div>
